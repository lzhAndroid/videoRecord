<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:mContext="com.guoxiaoxing.phoenix.demo.camera.CameraDemoActivity">

    <Button
        android:id="@+id/btn_camera_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CameraActivity"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_take_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="take photo"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_camera_activity"/>

    <Button
        android:id="@+id/btn_take_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="take video"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_take_picture"/>

</android.support.constraint.ConstraintLayout>
